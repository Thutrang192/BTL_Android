<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bottomsheet_chose_color"
    android:background="@drawable/bg_bottomsheet_choose_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn chủ đề"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    
    <LinearLayout
        android:id="@+id/layout_choose_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/bg_round_red"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/iv_orange"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/bg_round_orange"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/iv_blue"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/bg_round_blue"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/iv_green"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/bg_round_green"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/iv_violet"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/bg_round_violet"
            android:layout_margin="10dp" />
    </LinearLayout>



</LinearLayout>